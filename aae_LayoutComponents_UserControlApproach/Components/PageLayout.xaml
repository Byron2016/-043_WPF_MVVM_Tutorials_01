<UserControl x:Class="aae_LayoutComponents_UserControlApproach.Components.PageLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aae_LayoutComponents_UserControlApproach.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border 
                    Grid.Row="0"
                    Padding="20"
                    BorderBrush="LightGray"
                    BorderThickness="0 0 0 1">
                    <Rectangle
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Center"
                        Fill="Blue" />
                </Border>
                
                <ContentPresenter Grid.Row="1" Margin="0 20 0 0"  Content="{TemplateBinding Content}" />
            </Grid>
        </DataTemplate>
    </UserControl.ContentTemplate>

</UserControl>
