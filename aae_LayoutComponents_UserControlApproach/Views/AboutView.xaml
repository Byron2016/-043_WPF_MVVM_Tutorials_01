<UserControl x:Class="aae_LayoutComponents_UserControlApproach.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:aae_LayoutComponents_UserControlApproach.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aae_LayoutComponents_UserControlApproach.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <components:PageLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="24" Text="About" />
            <TextBlock Grid.Row="1" Margin="0 20 0 0"  FontSize="24" Text="I am the About page" />
        </Grid>
    </components:PageLayout>
</UserControl>
