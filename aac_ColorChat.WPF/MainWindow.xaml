<Window x:Class="aac_ColorChat.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aac_ColorChat.WPF"
        
        xmlns:views="clr-namespace:aac_ColorChat.WPF.Views"
        xmlns:vm="clr-namespace:aac_ColorChat.WPF.ViewModels"
        
        
        mc:Ignorable="d"
        Title="Color Chat" 
        WindowStartupLocation="CenterScreen"
        MinWidth="500"
        Height="650" Width="800"
        d:DataContext="{d:DesignInstance vm:MainViewModel}">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <views:ColorChatView Margin="10" DataContext="{Binding ColorChatViewModel}" />
        </ScrollViewer>
        
    </Grid>
</Window>
